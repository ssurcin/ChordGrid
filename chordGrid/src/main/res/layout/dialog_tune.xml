<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chordgrid.tunes.TuneMetadataDialogFragment"
    android:background="#8093b5ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tune title:"
        android:id="@+id/textViewTuneTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTuneTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewTuneTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="40dp"
        android:inputType="textCapWords"
        android:layout_marginRight="5dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignBaseline="@+id/textViewTuneTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rhythm:"
        android:id="@+id/textViewRhythm"
        android:layout_below="@+id/editTextTuneTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/buttonRhythm"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Rhythm"
        android:id="@+id/buttonRhythm"
        android:layout_below="@+id/editTextTuneTitle"
        android:layout_alignLeft="@+id/editTextTuneTitle"
        android:layout_alignStart="@+id/editTextTuneTitle"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Key:"
        android:id="@+id/textView"
        android:layout_below="@+id/buttonRhythm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextKey"
        android:layout_below="@+id/buttonRhythm"
        android:layout_alignLeft="@+id/buttonRhythm"
        android:layout_alignStart="@+id/buttonRhythm"
        android:inputType="textCapWords"
        android:minWidth="50dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignBaseline="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bars per line:"
        android:id="@+id/textView2"
        android:layout_below="@+id/editTextKey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextBarsPerLine"
        android:layout_below="@+id/editTextKey"
        android:layout_alignLeft="@+id/editTextKey"
        android:layout_alignStart="@+id/editTextKey"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignBaseline="@+id/textView2" />
</RelativeLayout>
